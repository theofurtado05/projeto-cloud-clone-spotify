generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model users {
  id                Int       @id @default(autoincrement())
  email             String    @unique @db.VarChar(255)
  password          String    @db.VarChar(500)
  plan              String?   @default("FREE") @db.VarChar(500)
  datacriacao       DateTime? @default(now()) @db.Timestamp(6)
  credits_interview Int?      @default(0)
  credits_analyze   Int?      @default(0)
  credits_resume    Int?      @default(0)
  phone             String    @db.VarChar(15)
  name              String    @db.VarChar(50)
}

model interviewlog {
  id               Int       @id @default(autoincrement())
  userid           Int?
  question1        String?
  question2        String?
  question3        String?
  question4        String?
  question5        String?
  datelog          DateTime? @default(now()) @db.Timestamp(6)
  jobstitle        String?   @db.VarChar(500)
  jobsdetail       String?   @db.VarChar(500)
  question0        String?
  grade            Int?
  feedbackresponse Json?
}

model interviewrecruiter {
  id   Int     @id @default(autoincrement())
  text String?
}

model plans {
  id                Int     @id @default(autoincrement())
  name              String  @db.VarChar(255)
  offer_id          String? @db.VarChar(255)
  link_checkout     String? @db.VarChar(255)
  credits_interview Int     @default(0)
  credits_analyze   Int     @default(0)
  credits_resume    Int     @default(0)
  price             String? @db.VarChar(100)
}

model samplesresumes {
  id          Int     @id @default(autoincrement())
  tag         String? @db.VarChar(255)
  img         String? @db.VarChar(500)
  plan        String? @db.VarChar(255)
  title       String? @db.VarChar(255)
  link        String? @db.VarChar(500)
  companyicon String? @db.VarChar(500)
  ordem       Int    @default(1)
}

model customersresumes {
  id       Int     @id @default(autoincrement())
  userid   Int?
  link     String? @db.VarChar(1000)
  feedback Json?
}
